<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DD Shoe Reps</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/navigation.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("script", required: false)

    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />


</head>
<body>
    <div class="head-navbar">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <div class="img-nav">
                        <img src="~/image/2.png" alt="logo">
                    </div>
                    @Html.ActionLink("DD SHOE REPS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    </ul>



                </div>
            </div>
        </div>
    </div>
    </div>




    <div class="footer">
        @RenderBody()
        <hr>
        <div class="contact-page">

            <div class="quick-nav">
                <h1>Quick Access</h1>
                <ul class="ul">
                    <li><a href="@Url.Action("Index", "Home")" class="link">Home</a></li>
                    <li><a href="@Url.Action("About", "Home")" class="link">About Us</a></li>
                    <li><a href="@Url.Action("Contact", "Home")" class="link">Contact Us</a></li>

                </ul>
            </div>



            <div class="img-logo">
                <img src="~/image/2.png" alt="logo" width="200px" height="200px">
            </div>



            <div class="quick-nav">

                <h1>Contact Us</h1>
                <p class="para"><strong>Email: </strong>info@ddshoereps.lk</p>
                <p class="para"><strong>Phone:</strong>0112567019</p>


            </div>
        </div>
        <hr>
        <div class="copyright">

            <p class="copyright-text">&copy; @DateTime.Now.Year - DD Shoe Reps</p>
        </div>
        <hr />
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)



</body>
</html>
